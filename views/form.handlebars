<form action="/app.js" id="client">
        <div class="row">
            <div class="col-2">
                <label for="first-name">First Name</label>
                <input type="text" id="first" name="first-name" placeholder="First Name" required>
            </div>
            <div class="col-2">
                <label for="last-name">Last Name</label>
                <input type="text" id="last" name="last-name" placeholder="Last Name" required>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="email@abc.com" required>
            </div>
            <div class="col-2">
                <label for="phone">Enter your phone number:</label>
                <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="123-456-7890" required>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="address">Street Address</label>
                <input type="text" id="street" name="address" placeholder="1234 Turning drive Unit 4" required>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label for="city">City</label>
                <input type="text" id="city" name="city" placeholder="City" required>
            </div>
            <div class="col-3">
                <label for="state">State</label>
                <input type="text" name="state" id="state" placeholder="State" required>
            </div>
            <div class="col-3">
                <label for="zip">Zip Code</label>
                <input type="number" id="zip" name="zip" pattern="[0-9]{5}" placeholder="12345" required>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="dob">Date Of Birth</label>
                <input type="date" id="dob" name="dob" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}" placeholder="MM/DD/YYYY" required>
            </div>
            <div class="col-2">
                <label for="gender">Gender</label>
                <select name="gender" id="gender">
                    <option value="" selected>Choose option</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label for="height">Height</label>
                <select name="height" id="feet">
                    <option value="" selected>feet</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
                <select name="height" id="inches">
                    <option value="" selected>inches</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                </select>
            </div>
            <div class="col-2">
                <label for="weight">Weight</label>
                <input type="number" id="weight" name="weight" placeholder="pounds" required>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="activity">Activity Level</label>
                <select name="activity" id="saf">
                    <option value="" selected>select option</option>
                    <option value="1.2">Sedintary</option>
                    <option value="1.375">Light activity or exercise 1-3 days a week</option>
                    <option value="1.55"> Moderate activity or exercise 3-5 days a week</option>
                    <option value="1.725">Heavy activity or exercise 6-7 days a week</option>
                    <option value="1.9">Very heavy activity or 2 a days</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="goals">Fitness</label>
                <select name="goals" id="deficit">
                    <option value="" selected>Choose an Option</option>
                    <option value="0">Build Muscle and maintain weight</option>
                    <option value="250">Tone up and lean down</option>
                    <option value="500">Lose weight</option>
                    <option value="750">Major lifestyle change/Drop out of obesity level</option>
                </select>
            </div>
        </div>
        <input type="submit" value="submit" id="sub-btn">
    </form>